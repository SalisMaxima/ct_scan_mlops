// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/python
{
    "name": "ct_scan_mlops",
    // Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
    "image": "mcr.microsoft.com/devcontainers/python:3.12-bullseye",
    "features": {},

    // GPU support: Docker GPU passthrough is disabled by default for macOS compatibility.
    // PyTorch will automatically use CPU on macOS and can still use Metal Performance Shaders.
    //
    // For Linux hosts with NVIDIA GPUs:
    // 1. Ensure NVIDIA drivers and NVIDIA Container Toolkit are installed
    // 2. Uncomment the lines below:
    // "runArgs": ["--gpus=all"],
    // "containerEnv": {
    //     "NVIDIA_VISIBLE_DEVICES": "all",
    //     "NVIDIA_DRIVER_CAPABILITIES": "compute,utility"
    // },
    //
    // PyTorch will automatically detect and use CUDA GPUs when available.
    // No code changes needed - torch.cuda.is_available() handles detection.

    // Use 'postCreateCommand' to run commands after the container is created.
    "postCreateCommand": "bash .devcontainer/post_create.sh",

    // Configure tool-specific properties.
    "customizations": {
        "vscode": {
            "extensions": ["ms-python.python", "editorconfig.editorconfig"],
            "settings": {
                "python.testing.pytestArgs": ["tests"],
                "python.testing.unittestEnabled": false,
                "python.testing.pytestEnabled": true,
                "python.defaultInterpreterPath": "/workspaces/ct_scan_mlops/.venv/bin/python",
                "python.testing.pytestPath": "/workspaces/ct_scan_mlops/.venv/bin/pytest"
            }
        }
    }
}
